@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SoftwareHouse.Web</title>

    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,900" rel="stylesheet">
    <link href="~/dist/styles/libs.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)

</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <img class="img-responsive navbar-logo" src="~/images/logo.png" />
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-controller="@(SignInManager.IsSignedIn(User) ? "Projects" : "Home")"
                   asp-action="Index"
                   class="navbar-brand"></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li><a asp-controller="Projects" asp-action="Index">Projects</a></li>
                    }
                </ul>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
    </div>

    <script src="~/dist/commons.js"></script>
    <script src="~/dist/libs.js"></script>

    @RenderSection("Scripts", required: false)

    <footer>
        <p class="footer-text">© 2018 SustainBase</p>
    </footer>
</body>
</html>
